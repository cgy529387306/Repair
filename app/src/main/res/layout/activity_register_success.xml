<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_pass"
        android:layout_width="wrap_content"
        android:padding="16dp"
        android:textSize="12dp"
        android:text="跳过"
        android:textColor="@color/text_black"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_above="@+id/tv_name"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:src="@drawable/icon_register_success"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:text="恭喜您注册成功"
        android:textSize="20dp"
        android:textColor="@color/text_red"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/tv_detail"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_detail"
        android:layout_width="wrap_content"
        android:textColor="@color/text_black"
        android:textSize="14dp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:text="匠修客服会尽快对您的资料进行审核认证与验证，请您耐心等候哦~"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_perfect"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_margin="32dp"
        android:background="@drawable/bg_btn_red"
        android:text="完善基础认证资料"
        android:layout_above="@+id/tv_perfect_detail"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/tv_perfect_detail"
        android:layout_width="wrap_content"
        android:textColor="@color/text_gray"
        android:textSize="14dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="64dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:text="完善资料，将提高认证通过率哦~"
        android:layout_height="wrap_content" />

</RelativeLayout>