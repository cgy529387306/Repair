<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_start"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/main_container_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:background="@color/white"
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <TextView
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:id="@+id/tv_order"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/order_on"
                android:gravity="center"
                android:text="订单"
                android:textColor="#FF5E5E" />

            <TextView
                android:id="@+id/tv_find_service"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/find_service_off"
                android:gravity="center"
                android:text="找服务"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tv_mall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/mall_off"
                android:gravity="center"
                android:text="商城"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tv_personal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/personal_off"
                android:gravity="center"
                android:text="我的"
                android:textColor="#666666" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>