<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:focusable="true">

    <com.yxw.cn.carpenterrepair.view.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <com.yxw.cn.carpenterrepair.view.MyMapView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.baidu.mapapi.map.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:clickable="true" />
    </com.yxw.cn.carpenterrepair.view.MyMapView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_location"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="我的位置"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="(在签到范围内)"
                    android:textColor="#666666"
                    android:textSize="12sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#E4E4E4" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="福建省仓山区金山大道"
                android:textColor="#666666"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_marginLeft="15dp"
                android:id="@+id/rl_iv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="#F6F3F3">

                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/iv"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/icon_add_card" />
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/ll_code"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:padding="10dp"
                android:background="@drawable/corner_gray_rect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_weight="1"
                    android:layout_centerVertical="true"
                    android:id="@+id/et_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="客户服务验证码(必填)"
                    android:lines="1"
                    android:maxLength="20"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <com.yxw.cn.carpenterrepair.view.CountDownTextView
                    android:id="@+id/bt_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获取验证码"
                    android:background="@color/text_red"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/corner_gray_rect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:padding="10dp"
                    android:id="@+id/et_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="90dp"
                    android:background="@null"
                    android:gravity="left"
                    android:hint="备注填写"
                    android:lines="1"
                    android:maxLength="20"
                    android:textColor="#333333"
                    android:textSize="14sp" />

            </RelativeLayout>

            <Button
                android:id="@+id/ok"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_btn_rect_red"
                android:text="签到"
                android:textColor="#ffffff" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>