<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.yxw.cn.carpenterrepair.view.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您的登录账号是：" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/r1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/l1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_lock" />

            <EditText
                android:id="@+id/et1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/eyes1"
                android:layout_toRightOf="@+id/iv"
                android:inputType="textPassword"
                android:background="@null"
                android:hint="请输入旧密码"
                android:textColorHint="#D7D7D7"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/eyes1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/eyes_off" />

            <include layout="@layout/view_line_h" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/r2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/r1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_lock" />

            <EditText
                android:id="@+id/et2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:inputType="textPassword"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/eyes2"
                android:layout_toRightOf="@+id/iv2"
                android:background="@null"
                android:hint="请输入新密码(6到16个字符或数字)"
                android:textColorHint="#D7D7D7"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/eyes2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/eyes_off" />

            <include layout="@layout/view_line_h" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/r3"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/r2"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_lock" />

            <EditText
                android:id="@+id/et3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:inputType="textPassword"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/eyes3"
                android:layout_toRightOf="@+id/iv3"
                android:background="@null"
                android:hint="请再次输入新密码"
                android:textColorHint="#D7D7D7"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/eyes3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/eyes_off" />

            <include layout="@layout/view_line_h" />

        </RelativeLayout>

        <Button
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_below="@+id/r3"
            android:layout_margin="32dp"
            android:background="@drawable/bg_btn_red"
            android:text="确定"
            android:textColor="#ffffff" />

    </RelativeLayout>
</LinearLayout>
