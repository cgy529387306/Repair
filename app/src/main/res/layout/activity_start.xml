<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg_login"
    android:orientation="vertical"
    android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:text="欢迎回来"
            android:textColor="@color/text_red"
            android:textSize="22sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="精工巧匠的聚集地"
            android:textColor="@color/text_gray"
            android:textSize="14sp"/>
        <com.yxw.cn.carpenterrepair.view.ClearEditText
            android:id="@+id/et_tel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="40dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/icon_user"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edt_bt"
            android:inputType="phone"
            android:hint="手机号"
            android:textSize="@dimen/text_normal"  />
        <com.yxw.cn.carpenterrepair.view.ClearEditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/icon_passw"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edt_bt"
            android:inputType="phone"
            android:hint="密码"
            android:textSize="@dimen/text_normal"  />
        <TextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/text_normal"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="登录"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/corner_red" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_forget_password"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textSize="@dimen/text_normal"
                    android:textColor="@color/text_gray"
                    android:text="忘记密码？"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1dp"/>
                <TextView
                    android:id="@+id/tv_quick_login"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textSize="@dimen/text_normal"
                    android:textColor="@color/text_red"
                    android:text="验证码登录"
                    />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_register"
            android:layout_width="160dp"
            android:layout_height="46dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/text_normal"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="注册"
            android:background="@drawable/corner_red" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登录注册即同意"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_small" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:text="《匠修用户协议》"
                    android:textColor="@color/text_red"
                    android:textSize="@dimen/text_small"/>
        </LinearLayout>
</LinearLayout>