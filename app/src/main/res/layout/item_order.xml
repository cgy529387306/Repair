<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="手机维修/苹果"
            android:textColor="@color/text_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/name"
            android:text="￥150"
            android:textColor="#ff0000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/serviceStatus"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="待服务"
            android:textColor="#ff0000"
            android:textSize="14sp" />

        <include layout="@layout/view_line_h" />

    </RelativeLayout>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/time"
        android:drawablePadding="7dp"
        android:text="2018-1-20 15:00:00"
        android:textColor="@color/text_gray"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginLeft="14dp"
            android:background="@drawable/circle_gray" />

        <TextView
            android:id="@+id/tv_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="福州 晋安区 福州站小区"
            android:textColor="@color/text_gray"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:gravity="center_vertical">

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginLeft="14dp"
            android:background="@drawable/circle_red" />

        <TextView
            android:id="@+id/remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="手机屏幕碎了，得换屏幕"
            android:textColor="@color/text_gray"
            android:textSize="12sp" />
    </LinearLayout>

    <include layout="@layout/view_line_h" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/tv_contact"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/stroke_gray"
            android:gravity="center"
            android:padding="5dp"
            android:text="联系客服"
            android:textColor="@color/text_gray"
            android:textSize="14sp" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/tv_cancel"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/tv_contact"
            android:background="@drawable/stroke_gray"
            android:gravity="center"
            android:padding="5dp"
            android:text="取消订单"
            android:textColor="@color/text_gray"
            android:textSize="14sp" />

    </RelativeLayout>


</LinearLayout>
